{
  "name": "onebright-cypress",
  "version": "1.0.0",
  "scripts": {
    "test": "cypress run --spec 'cypress/e2e/**/*.cy.js' --reporter mochawesome --reporter-options reportDir=cypress/reports/html,json=true,overwrite=false || echo 'Cypress run failed, but continuing'",
    "merge-reports": "mochawesome-merge cypress/reports/html/*.json > cypress/reports/html/mochawesome.json",
    "generate-report": "marge cypress/reports/html/mochawesome.json -f mochawesome -o cypress/reports/html"
  },
  "devDependencies": {
    "@types/cypress": "^0.1.6",
    "cypress": "^15.5.0",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.3.0"
  }
}
